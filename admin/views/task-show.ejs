<%- include('./include/header.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <!-- <h1 class="m-0">Dashboard</h1> -->
        </div>
        <!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Task List</li>
          </ol>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- <%- req.toastr.render() %> -->

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <!-- Small boxes (Stat box) -->
      <div class="row">
        <div class="col-12">
          <div class="card">
            
            <div class="card-body">
              <table id="example4" class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>Task Name</th>
                    <th>Course Name</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Groups Name</th>
                    <th>Status</th>
                    <th>Record</th>
                  </tr>
                </thead>
                <tbody>
                  <% var i=1; %> <% result.forEach((data)=>{ %>
                  <tr id="del<%= data.id %>">
                    <td><%= i %></td>
                    <td>
                      <%= data.task_name?data.task_name.toUpperCase():'' %>
                    </td>

                    <td>
                      <%= data.course_name?data.course_name.toUpperCase():'' %>
                    </td>

                    <td>
                      <%= data.task_start_date?(new
                      Date(data.task_start_date).toLocaleDateString()):'' %>
                    </td>

                    <td>
                      <%= data.task_end_date?(new
                      Date(data.task_end_date).toLocaleDateString()):'' %>
                    </td>

                    <td>
                      <%= data.group_name?data.group_name.toUpperCase():'' %>
                    </td>

                    <td>
                      <%= data.task_status?data.task_status.toUpperCase():'' %>
                    </td>

                    <td>
                      <% if(!data.delete_task_status) { %>
                      <a
                        data-placement="bottom"
                        title="records"
                        href="/task/record/<%= data.id %>"
                      >
                        <button class="btn btn-sm btn-primary">
                          <i class="fa fa-user" aria-hidden="true"></i>
                        </button>
                      </a>
                      <%}%>
                    </td>
                  </tr>
                  <% i++; }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include('./include/footer.ejs') %>

<script>
  $(document).ready(function () {
    $("#example4").DataTable({
      paging: true,
      lengthChange: false,
      searching: false,
      ordering: true,
      info: true,
      autoWidth: false,
      responsive: true,
      
      
    });

    $('#example4 td').css('white-space','initial');

  });
</script>